<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.youngtec.a20171201websocket.Select_Activity"
    tools:showIn="@layout/activity_select_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_startdate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="起始日期"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/btnstartdate"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="..." />

        <EditText
            android:id="@+id/txt_enddate"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="最後日期"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="274dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/btnenddate"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="..." />

        <Button
            android:id="@+id/btnsend_date"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="確定" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"></LinearLayout>
</android.support.constraint.ConstraintLayout>
